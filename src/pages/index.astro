---
import 'uno.css'
import '@unocss/reset/eric-meyer.css'

import Logo from '~Components/logo.astro'
import Icon from '~Components/icon.vue'
import Tooltip from '~Components/tooltip.astro'

import social from '~Content/social.js'
import knowledge from '~Content/knowledge.js'

const title = 'Gui Barscevicius'
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>

  <body font-sans>
    <div class="bg-sky-700 h-screen text-white">
      <Logo class="h-100 w-100" />
      {social.map(item => <Tooltip text={item.name}><Icon {...item} /></Tooltip>)}
      {knowledge.map(item => <Tooltip text={item.name}><Icon {...item} /></Tooltip>)}
    </div>
  </body>
</html>
